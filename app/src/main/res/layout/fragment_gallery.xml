<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GalleryFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/galleryRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/getImagesBtn"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:text="GET Images"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/galleryRV"
        app:layout_constraintStart_toStartOf="@+id/galleryRV" />

    <Button
        android:id="@+id/deleteImagesBtn"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:text="Delete Images"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/galleryRV"
        app:layout_constraintEnd_toEndOf="@+id/galleryRV" />

</androidx.constraintlayout.widget.ConstraintLayout>